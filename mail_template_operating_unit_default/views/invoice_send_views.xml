<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--
               Invoice:  Send Email
        -->
        <record model="ir.ui.view" id="invoice_send_inherit">
            <field name="name">account.invoice.send.form.inherited.edi</field>
            <field name="model">account.invoice.send</field>
            <field name="inherit_id" ref="account.account_invoice_send_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email_from']" position='after'>
                    <field name="operating_unit_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
