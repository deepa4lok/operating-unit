<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!--
            Mail Compose
         -->
        <record model="ir.ui.view" id="email_compose_message_wizard_form_inherit">
            <field name="name">mail_message_wizard_form_inherit</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='model']" position="after">
                    <field name="operating_unit_id" invisible="1"/>
                </xpath>
            </field>
        </record>

</odoo>
